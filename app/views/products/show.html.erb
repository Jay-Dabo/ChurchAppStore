<div class="container">
	<div class="row">
		<div class="col-md-4">

			<p id="notice"><%= notice %></p>

			<div>
				<%= image_tag(@product.image_url) %>
			</div>
			<div>
				<%= @product.title %>
			</div>
			<div>
				<%= @product.description %>
			</div>
			<div>
				<%= @product.price %>
			</div>
			<div>
				<%= link_to 'Edit', edit_product_path(@product) %> |
				<%= link_to 'Back', products_path %>
			</div>
		</div>
	</div>
</div>
