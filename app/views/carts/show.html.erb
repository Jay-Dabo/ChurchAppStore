<div class="container">
	<div class="row">
		<div class="col-md-12">
			<% if notice %>
				<p id="notice"><%= notice %></p>
			<% end %>

			<h2>Your cart</h2>
			<ul class="cart">
				<% cart.line_items.each do |item| %>
				<li><%= item.product.title %></li>
				<% end %>
			</ul>

			<%= link_to 'Edit', edit_cart_path(@cart) %> |
			<%= link_to 'Back', carts_path %>
